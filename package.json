{
  "name": "yt-live-chat-overlay",
  "version": "0.4.2",
  "description": "Nico-nico style comment overlay for YouTube live chat (100% local processing)",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "check": "tsc --noEmit",
    "knip": "knip --dependencies",
    "knip:full": "knip --files --exports --dependencies --reporter compact --max-show-issues 50 --no-exit-code",
    "lint": "biome lint ./src vite.config.ts",
    "lint:fix": "biome lint --write ./src vite.config.ts",
    "fmt": "biome check --linter-enabled=false ./src vite.config.ts",
    "fmt:fix": "biome check --write --linter-enabled=false ./src vite.config.ts",
    "quality": "pnpm -s knip && pnpm check && biome check ./src vite.config.ts",
    "quality:fix": "pnpm -s knip && pnpm check && biome check --write ./src vite.config.ts",
    "prebuild": "pnpm quality"
  },
  "keywords": [
    "userscript",
    "youtube",
    "live-chat",
    "overlay",
    "nico-nico"
  ],
  "author": "PiesP",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.27.0",
  "volta": {
    "node": "24.13.0",
    "pnpm": "10.27.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@biomejs/cli-linux-x64": "^2.4.2",
    "@types/node": "^25.2.3",
    "knip": "^5.83.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
