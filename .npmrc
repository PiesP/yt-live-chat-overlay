# pnpm Configuration for YouTube Live Chat Overlay
# Node.js 24 + pnpm 10.x environment

# Enforce compatible Node/pnpm versions
engine-strict=true

# Lockfile format
lockfile-version=3

# Hoist patterns for development tools
public-hoist-pattern[]=*types*
public-hoist-pattern[]=*biome*

# Install behavior
prefer-frozen-lockfile=true
auto-install-peers=true
strict-peer-dependencies=false

# Performance
prefer-offline=true
